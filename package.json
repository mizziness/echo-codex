{
  "name": "echo-codex",
  "displayName": "EchoCodex",
  "description": "A chaos-fueled AI replacement for Copilot, created for developers, powered by ChatGPT, and summoned directly into your IDE. Blood sacrifice not required; just strongly encouraged.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [

  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "echo-codex.askEcho",
        "title": "Ask Echo"
      },
      {
        "command": "echo-codex.setApiKey",
        "title": "Set OpenAI API Key"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "echoCodexSidebar",
          "title": "EchoCodex",
          "icon": "media/echo-icon.svg",
          "type": "webview"
        }
      ]
    },
    "views": {
      "echoCodexSidebar": [
        {
          "id": "echoCodexView",
          "name": "Ask Echo",
          "icon": "media/echo-icon.svg",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "jest": "jest --config jest.config.js"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "jest": "^30.0.0",
    "jest-environment-node": "^30.0.0",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}